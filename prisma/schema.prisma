// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator nestgraphql {
  provider = "prisma-nestjs-graphql"
  output   = "../apps/backend/src/app/@generated/prisma-nestjs-graphql"
  reExport = Directories
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id       Int      @id @default(autoincrement())
  username      String   @unique
  password      String
  email         String   @unique
  profile_image String?
  created_at    DateTime
  tweets        Tweet[]
  likes         Like[]
}

model Tweet {
  tweet_id   Int      @id @default(autoincrement())
  tweet_text String
  created_at DateTime
  author     User     @relation(fields: [user_id], references: [user_id])
  user_id    Int
  likes      Like[]
}

model Like {
  like_id  Int   @id @default(autoincrement())
  user_id  Int
  tweet_id Int
  user     User  @relation(fields: [user_id], references: [user_id])
  tweet    Tweet @relation(fields: [tweet_id], references: [tweet_id])
}
